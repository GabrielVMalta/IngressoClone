@model Ator

    <h1>@Model.Nome</h1>
<div class="row">
    <div class="col-md-2">
        <img class="img-thumbnail" src="@Model.FotoPerfilURL"/>
    </div>
    
    <div class="col-md-10">
        @Model.Bio
    </div>
</div>

@* Carrossel *@
<div class="row">
    <div id="carouselExampleControls" class="carousel slide col-md-4 offset-md-4" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2/yeF9WQvxHRrJnr5fGEfnzDpn4pA.jpg" class="d-block w-100 img-thumbnail">
            </div>
            <div class="carousel-item">
                <img src="https://www.themoviedb.org/t/p/w150_and_h225_bestv2/vK3EINuibdkBwUe9jOhVUXtLeb6.jpg" class="d-block w-100 img-thumbnail">
            </div>
            <div class="carousel-item">
                <img src="https://www.themoviedb.org/t/p/w300_and_h450_bestv2/38RVo4cX1O7Ia6k9WXcxkxprHm.jpg" class="d-block w-100 img-thumbnail">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>