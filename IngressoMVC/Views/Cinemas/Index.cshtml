@model IEnumerable<Cinema>

<div class="row">

    <div class="col-md-10 offset-md-1">

        <h1>
            Cinemas
            -
            <a class="btn btn-dark" asp-action="Criar">
                Cadastrar
            </a>
        </h1>

        <div class="col-12 my-2">
            <input class="form-control" type="text" name="nome" id="nome" placeholder="Digite o nome do Cinemas"/>
        </div>

        <br />

        <table class="table table-striped">

            <thead>

                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                </tr>

            </thead>

            <tbody>

                @foreach (var cinemas in Model)
                {
                    <tr>
                        <td width="100">

                            <div class="d-flex flex-column">

                                <a class="btn btn-success mt-1" asp-action="Atualizar" asp-route-id="@cinemas.Id">

                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Editar
                                </a>

                               

                                <a class="btn btn-primary mt-1" asp-action="Detalhes" asp-route-id="@cinemas.Id">
                                    <i class="fa-solid fa-eye"></i>
                                    Ver
                                </a>

                               

                                <a class="btn btn-danger mt-1" asp-action="Deletar" asp-route-is="@cinemas.Id">
                                    <i class="fa-solid fa-eraser"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>

                        <img src="@cinemas.LogoUrl" width="100" alt="">
                        <td width="100" class="align-middle">@cinemas.Nome</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>