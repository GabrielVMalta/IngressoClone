@model IEnumerable<Filme>

<div class="row">

    <div class="col-md-10 offset-md-1">

        <h1>
            Atores
            -
            <a class="btn btn-dark" href="#">
                Cadastrar
            </a>
        </h1>

        <div class="col-12 my-2">
            <input class="form-control" type="text" name="nome" id="nome" placeholder="Digite o nome do Filme"/>
        </div>

        <br />

        <table class="table table-striped">

            <thead>

                <tr>
                    <th>Ações</th>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th> </th>
                </tr>

            </thead>

            <tbody>

                @foreach (var filme in Model)
                {
                    <tr>
                        <td width="100">

                            <div class="d-flex flex-column">

                                <a class="btn btn-success mt-1" asp-action="Atualizar" asp-route-id="@filme.Id">

                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Editar
                                </a>

                               

                                <a class="btn btn-primary mt-1" asp-action="Detalhes" asp-route-id="@filme.Id">
                                    <i class="fa-solid fa-eye"></i>
                                    Ver
                                </a>

                               

                                <a class="btn btn-danger mt-1" asp-action="Deletar" asp-route-is="@filme.Id">
                                    <i class="fa-solid fa-eraser"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>

                        <td width="100" class="align-middle"><img src="@filme.ImageURL" style="max-width:100px" alt="@filme.Titulo"></td>
                        <td width="100" class="align-middle">@filme.Titulo</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>