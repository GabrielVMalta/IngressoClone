@model Categoria

    <h1>@Model.Nome</h1>
<div class="row">
</div>

                    <tr>
                        <td width="100">

                            <div class="d-flex flex-column">

                                <a class="btn btn-success mt-1" asp-action="Atualizar" asp-route-id="@Model.Id">

                                    <i class="fa-solid fa-pen-to-square"></i>
                                    Editar
                                </a>

                               

                                <a class="btn btn-primary mt-1" asp-action="Detalhes" asp-route-id="@Model.Id">
                                    <i class="fa-solid fa-eye"></i>
                                    Ver
                                </a>

                               

                                <a class="btn btn-danger mt-1" asp-action="Deletar" asp-route-is="@Model.Id">
                                    <i class="fa-solid fa-eraser"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>

                        <td width="100" class="align-middle">@Model.Nome</td>

                    </tr>